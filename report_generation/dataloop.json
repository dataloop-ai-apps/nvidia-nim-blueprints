{
    "name": "report-generation",
    "displayName": "Report Generation", 
    "description": "Generate a report based on a given topic and report structure.",
    "version": "0.0.16",
    "scope": "public",
    "attributes": {
        "Hub": ["Nvidia", "Dataloop"],
        "Category": ["Application"],
        "Application Type": "GenAI",
        "Provider": "NVIDIA",
        "Developed By": "Dataloop"
    },
    "codebase": {
      "type": "git",
      "gitUrl": "https://github.com/dataloop-ai-apps/nvidia-nim-blueprints.git",
      "gitTag": "0.0.16"
    },
    "components": {
      "computeConfigs": [
        {
          "name": "report-generation-compute-config",
          "runtime": {
            "podType": "regular-xs",
            "concurrency": 10,
            "runnerImage": "gcr.io/viewo-g/piper/agent/runner/apps/nvidia-nim-blueprints:0.0.2",
            "autoscaler": {
              "type": "rabbitmq",
              "minReplicas": 0,
              "maxReplicas": 2
            }
          }
        }
      ],
      "pipelineNodes": [
        {
          "name": "report-search-queries-node",
          "invoke": {
            "type": "function",
            "namespace": "report-generation-compute-config.report-generation-module.report_search_queries"
          },
          "categories": ["Report Generation"],
          "scope": "project"
        },
        {
          "name": "search-tavily-node",
          "invoke": {
            "type": "function",
            "namespace": "report-generation-compute-config.report-generation-module.search_tavily"
          },
          "categories": ["Report Generation"],
          "scope": "project"
        },
        {
          "name": "report-planning-node",
          "invoke": {
            "type": "function",
            "namespace": "report-generation-compute-config.report-generation-module.report_planning"
          },
          "categories": ["Report Generation"],
          "scope": "project"
        },
        {
          "name": "report-sections-node",
          "invoke": {
            "type": "function",
            "namespace": "report-generation-compute-config.report-generation-module.report_sections"
          },
          "categories": ["Report Generation"],
          "scope": "project"
        },
        {
          "name": "write-final-section-research-node",
          "invoke": {
            "type": "function",
            "namespace": "report-generation-compute-config.report-generation-module.write_final_section_research"
          },
          "categories": ["Report Generation"],
          "scope": "project"
        },
        {
          "name": "gather-sections-node",
          "invoke": {
            "type": "function",
            "namespace": "report-generation-compute-config.report-generation-module.gather_sections"
          },
          "categories": ["Report Generation"],
          "scope": "project"
        }
      ],
      "modules": [
        {
          "name": "report-generation-module",
          "computeConfig": "report-generation-compute-config",
          "entryPoint": "report_generation/report_generation.py",
          "className": "ReportGenerator",
          "integrations": [
            "dl-tavily-api-key"
          ],
          "functions": [
            {
              "name": "report_search_queries",
              "input": [
                {
                  "name": "item",
                  "type": "Item"
                }
              ],
              "output": [
                {
                  "name": "item",
                  "type": "Item"
                }
              ],
              "displayName": "Report Search Queries"
            },
            {
              "name": "search_tavily",
              "input": [
                {
                  "name": "item",
                  "type": "Item"
                }
              ],
              "output": [
                {
                  "name": "item",
                  "type": "Item"
                },
                {
                  "name": "source_str",
                  "type": "String"
                }
              ],
              "displayName": "Search Tavily"
            },
            {
              "name": "report_planning",
              "input": [
                {
                  "name": "item",
                  "type": "Item"
                },
                {
                  "name": "source_str",
                  "type": "String"
                }
              ],
              "output": [
                {
                  "name": "item",
                  "type": "Item"
                }
              ],
              "displayName": "Report Planning"
            },
            {
              "name": "report_sections",
              "input": [
                {
                  "name": "item",
                  "type": "Item"
                }
              ],
              "output": [
                {
                  "name": "research_sections_promt_items",
                  "type": "Item[]"
                },
                {
                  "name": "non_research_sections_promt_items",
                  "type": "Item[]"
                }
              ],
              "displayName": "Report Sections"
            },
            {
              "name": "write_final_section_research",
              "input": [
                {
                  "name": "item",
                  "type": "Item"
                },
                {
                  "name": "source_str",
                  "type": "String"
                }
              ],
              "output": [
                {
                  "name": "item",
                  "type": "Item"
                }
              ],
              "displayName": "Write Final Section Research"
            },
            {
              "name": "gather_sections",
              "input": [
                {
                  "name": "item",
                  "type": "Item"
                }
              ],
              "output": [
                {
                  "name": "item",
                  "type": "Item"
                }
              ],
              "displayName": "Gather Sections"
            }
          ]
        }
      ]
    }
  }